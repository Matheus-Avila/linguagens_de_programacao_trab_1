disciplina(fisica2,cienciadacomputacao).
disciplina(fisica2,sistemasdeinformacao).

matriz(Y,Z) :- disciplina(Y,Z).

ira(X,I) :- findall(Z, historico(X,Y,Z), L), sumlist(L, S), I is S/4.

historico(X,Y,Z):- estudante(X,C), disciplina(Y,C), nota(X,Y,Z).
estudante(matheus,cienciadacomputacao).
estudante(lucas,sistemasdeinformacao).

nota(matheus,algoritmos,70).
nota(matheus,calculo1,90).
nota(matheus,calculo2,40).

disciplina(algoritmos,cienciadacomputacao).
disciplina(algoritmos,sistemasdeinformacao).

